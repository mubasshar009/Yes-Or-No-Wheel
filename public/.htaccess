# Force HTTPS and canonical domain
RewriteEngine On

# Redirect old domain to new domain (if this file can be placed on old domain)
RewriteCond %{HTTP_HOST} ^v0-yes-or-no-wheelmain2\.vercel\.app$ [NC]
RewriteRule ^(.*)$ https://yesno-wheel.com/$1 [R=301,L]

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove trailing slashes
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{THE_REQUEST} /+[^?\s]*?/[\s?]
RewriteRule ^(.+)/$ /$1 [R=301,L]

# Set canonical headers
Header always set Link '<https://yesno-wheel.com/>; rel="canonical"'